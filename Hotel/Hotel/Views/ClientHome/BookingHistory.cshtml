@model List<Hotel.Models.RoomBooking>

@{
    ViewBag.Title = "Lịch sử đặt phòng";
}

<h2>Lịch sử đặt phòng của bạn</h2>

@if (Model.Count == 0)
{
    <p>Không có lịch sử đặt phòng.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>STT</th>
                <th>Ngày đặt</th>
                <th>Ngày trả</th>
                <th>Số phòng</th>
                <th>Thành viên</th>
                <th>Tổng cộng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].BookingFrom.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@Model[i].BookingTo.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@Model[i].Room.RoomNumber</td>
                    <td>@Model[i].NoOfMember</td>
                    <td>@Model[i].Total</td>
                    <td>
                        @if (Model[i].BookingFrom > DateTime.Now.AddDays(1))
                        {
                            <a href="@Url.Action("CancelBooking", new { id = Model[i].BookingId })" onclick="return confirm('Bạn có chắc chắn muốn hủy đặt phòng?')" class="btn btn-danger">Hủy đặt</a>
                        }
                        else
                        {
                            <span class="btn btn-success">Xong</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
